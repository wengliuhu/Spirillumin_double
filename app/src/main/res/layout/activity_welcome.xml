<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/applicationcolor"
    tools:context=".zzcsoft.welcome.WelcomeActivity" >

    <TextView
        android:id="@+id/textViewWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewWelcomeContent"
        android:layout_alignLeft="@+id/textViewWelcomeContent"
        android:text="中国医科大学附属第一医院"
        android:textColor="#0FA7FF"
        android:textSize="28dip"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewWelcomeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:text="@string/app_title"
        android:textColor="#0FA7FF"
        android:textSize="48dip" />

    <TextView
        android:id="@+id/textViewWelcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewLoading"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="系统启动中..."
        android:textColor="#0FA7FF"
        android:textSize="26dip" />

    <ImageView
        android:id="@+id/imageViewLoading"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/textViewManufactor"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loading" >
    </ImageView>

    <EditText
        android:id="@+id/dataView"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewCopyRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:text="Copyright © 2018-2023 All rights reserved"
        android:textColor="#0FA7FF" />

    <TextView
        android:id="@+id/textViewManufactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewCopyRight"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#0FA7FF"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/textViewWelcomeContent"
        android:layout_below="@+id/textViewWelcomeTitle"
        android:layout_toLeftOf="@+id/textViewWelcomeTitle"
        android:src="@mipmap/ic_welcome" />

</RelativeLayout>